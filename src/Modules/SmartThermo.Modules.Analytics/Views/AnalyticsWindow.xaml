<UserControl
    x:Class="SmartThermo.Modules.Analytics.Views.AnalyticsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ui:ThemeManager.RequestedTheme="Dark"
    Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Margin="0,12,0,8" Orientation="Horizontal">
            <Button Content="Выбрать сессию" Command="{Binding SetSessionCommand}" />
            <Separator Margin="8" />
            <TextBlock
                Margin="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Текущая сессия: 1212" />
        </StackPanel>

        <WpfPlot Grid.Row="1" Margin="0,8,0,0" />
    </Grid>
</UserControl>
