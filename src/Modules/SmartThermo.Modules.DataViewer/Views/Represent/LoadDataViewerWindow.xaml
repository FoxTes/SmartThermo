                            FontSize="12"
                            LabelFormatter="{Binding YFormatter}"
                            MaxRange="{Binding AxisYMax[0], Mode=TwoWay}"
                            MaxValue="{Binding AxisYMax[0], Mode=TwoWay}"
                            MinRange="{Binding AxisYMin[0], Mode=TwoWay}"
                            MinValue="{Binding AxisYMin[0], Mode=TwoWay}"
