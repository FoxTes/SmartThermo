<Window
    x:Class="SmartThermo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Width="1280"
    Height="720"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    Background="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:CommandBar Background="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}">
            <ui:AppBarButton IsEnabled="False" Label="Добавить прибор" />
            <ui:AppBarSeparator />
            <ui:AppBarButton Label="Подключить прибор" />
            <ui:AppBarSeparator />
            <ui:AppBarButton Label="Настроить прибор" />
            <ui:AppBarSeparator />
            <ui:CommandBar.SecondaryCommands>
                <ui:AppBarButton Label="О программе" />
            </ui:CommandBar.SecondaryCommands>

        </ui:CommandBar>
        <ui:NavigationView
            Grid.Row="1"
            Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            PaneTitle="SmartThermo">

            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="16,0,0,4"
                        Style="{DynamicResource TitleTextBlockStyle}"
                        Text="Измерительная точка 1" />
                    <Separator Background="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}" />
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <WpfPlot Name="WpfPlot1" Margin="8" />
                        <WpfPlot
                            Name="WpfPlot2"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="8" />
                        <WpfPlot
                            Name="WpfPlot3"
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="8" />
                        <WpfPlot
                            Name="WpfPlot4"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="8" />
                        <WpfPlot
                            Name="WpfPlot5"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="8" />
                        <WpfPlot
                            Name="WpfPlot6"
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="8" />

                    </Grid>

                    <Border
                        Grid.Column="1"
                        Margin="0,8"
                        Background="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}" />

                    <DataGrid
                        HorizontalScrollBarVisibility="Disabled"
                        Grid.Column="2"
                        CanUserResizeColumns="False"
                        CanUserResizeRows="False"
                        Padding="16,16,0,0"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        GridLinesVisibility="All"
                        IsReadOnly="True"
                        ItemsSource="{Binding SensorsEtherItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Path=Id}"
                                Header="Номер" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Path=Time}"
                                Header="Выход в эфир (сек)" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </Grid>
        </ui:NavigationView>
    </Grid>
</Window>
