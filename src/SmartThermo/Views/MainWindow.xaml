<Window
    x:Class="SmartThermo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Width="1280"
    Height="720"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:CommandBar>
            <ui:AppBarButton IsEnabled="False" Label="Добавить прибор" />
            <ui:AppBarSeparator />
            <ui:AppBarButton Label="Подключить прибор" />
            <ui:AppBarSeparator />
            <ui:AppBarButton Label="Настроить прибор" />
            <ui:AppBarSeparator />
            <ui:CommandBar.SecondaryCommands>
                <ui:AppBarButton Label="О программе" />
            </ui:CommandBar.SecondaryCommands>

        </ui:CommandBar>
        <ui:NavigationView
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            PaneTitle="SmartThermo" />
    </Grid>
</Window>
